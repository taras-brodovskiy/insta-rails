<h1><%= link_to @user.username, @user %></h1>  
<div class="well">
  <%= render @instapost %>
</div>
<%= render 'likes/like_form' if user_signed_in? %>

<div>New comment:</div>
<%= render 'comments/comment_form' %>
<div>Comments:</div>
<%= will_paginate @comments %>
<ul class="list-group">
  <% @comments.each do |comment| %>  
  <li class="list-group-item">
    <%= render comment %>
  </li>
  <% end %>
</ul>
